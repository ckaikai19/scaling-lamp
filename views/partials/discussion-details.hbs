<a href="/chatroom">
    <div class="single-post" data-id="{{ id }}">
        <div class="title-box">
            <h1>{{discussion_title}}</h1>
            <div>
                <i class="fa-solid fa-thumbs-up"></i>
                <i  class="fa-solid fa-thumbs-down"></i>
            </div>
        </div>

        <div class="about">
            <h1 class="author">{{ user.username }}</h1><span class="date-posted">{{ format_date user.createdAt }}</span>
        </div>

        <h1 class="details">
            {{discussion_description}}
        </h1>
    </div>
</a>
